{
  // window, themes, icons
  "workbench.colorTheme": "Dracula",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "symbols",
  "symbols.hidesExplorerArrows": false,
  // javascript/node.js
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  // react.js
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "javascriptreact": "javascriptreact",
    "typescriptreact": "typescriptreact"
  },
  // files and folders
  "files.autoSave": "afterDelay",
  "files.associations": {
    ".sequelizerc": "javascript",
    ".stylelintrc": "json",
    "*.tsx": "typescriptreact",
    ".env.*": "dotenv",
    ".prettierrc": "json"
  },
  // extensions
  "extensions.ignoreRecommendations": true,
  "extensions.autoCheckUpdates": true,
  // typescript
  "typescript.tsserver.log": "off",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "prompt",
  // editor
  "editor.fontSize": 15,
  "editor.tabSize": 2,
  "window.zoomLevel": 0.5,
  "editor.lineHeight": 22,
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.accessibilitySupport": "off",
  "editor.minimap.enabled": false,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "smooth",
  "editor.stickyScroll.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.wordWrap": "on",
  "window.commandCenter": true,
  "editor.renderLineHighlight": "gutter",
  // terminal
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.env.windows": {},
  // eslint and prettier
  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.addMissingImports": true,
    "source.organizeImports": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.inlineSuggest.enabled": true,
  "eslint.validate": [
    "javascript",
    "typescriptreact",
    "javascriptreact",
    "graphql"
  ],
  "prettier.semi": false,
  "[javascript]": {
    "editor.autoClosingBrackets": "always",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.autoClosingBrackets": "always",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.autoClosingBrackets": "always",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.autoClosingBrackets": "always",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  // fluent ui
  "fluent-ui-vscode.enableWallpaper": true,
  "fluent-ui-vscode.wallpaperPath": "C:\\Windows\\Web\\Wallpaper\\Windows\\img19.jpg",
  "fluent-ui-vscode.accent": "#00a2ed",
  "fluent-ui-vscode.darkBackground": "#141e2c",
  // edge tools
  "vscode-edge-devtools.webhint": false,
  "vscode-edge-devtools.webhintInstallNotification": true,
  // live server
  "liveServer.settings.donotShowInfoMsg": true,
  // file explorer
  "explorer.compactFolders": false,
  // git
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",
  "git.allowForcePush": false,
  "git.autofetch": true,
  // spell check
  "cSpell.userWords": [
    "bootcamp",
    "chakra",
    "checkin",
    "checkins",
    "clsx",
    "Codegen",
    "datadog",
    "Datetime",
    "dayjs",
    "Dotenv",
    "esbuild",
    "fastify",
    "Fastify",
    "feedbackwidget",
    "ffprobe",
    "Hono",
    "IUGU",
    "jamjuree",
    "jupiter",
    "liveblocks",
    "LIVEBLOCKS",
    "middlewares",
    "mixpanel",
    "monaco",
    "nestjs",
    "omni",
    "Omni",
    "Onboarded",
    "pallas",
    "postgres",
    "postgresql",
    "prefetch",
    "reactflow",
    "roboto",
    "rocketseat",
    "rotion",
    "rsxp",
    "Sandpack",
    "shiki",
    "skylab",
    "sqlite",
    "supergraph",
    "svgr",
    "sympla",
    "tabnine",
    "textblock",
    "tiptap",
    "trpc",
    "TRPC",
    "tsup",
    "unfollow",
    "Unfollow",
    "unform",
    "Unform",
    "unmark",
    "upsert",
    "Usuario",
    "WEBPUSH",
    "tavecia",
    "Tavecia"
  ],
  "cSpell.language": "en,pt,pt-BR",
  "cSpell.enableFiletypes": [
    "!asciidoc",
    "!c",
    "!cpp",
    "!csharp",
    "!go",
    "!handlebars",
    "!haskell",
    "!jade",
    "!java",
    "!latex",
    "!php",
    "!pug",
    "!python",
    "!restructuredtext",
    "!rust",
    "!scala",
    "!scss"
  ],
  // prisma
  "[prisma]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "Prisma.prisma"
  },
  // tabnine
  "tabnine.experimentalAutoImports": true,
  // security
  "security.workspace.trust.untrustedFiles": "newWindow"
}
